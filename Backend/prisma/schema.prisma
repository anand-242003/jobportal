// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  fullName           String
  email              String   @unique
  phoneNumber        String
  password           String
  role               Role     @default(Student)
  profileBio         String?
  skills             String[]
  resume             String?
  resumeOriginalname String?
  profilePhoto       String?  @default("")
  refreshToken       String?

  // Relations
  createdJobs  Job[]         @relation("CreatedJobs")
  applications Application[] // A user can apply to many jobs
  savedJobs    SavedJob[]    // A user can save many jobs
  
  // Chat relations
  conversationsAsUser1 Conversation[] @relation("UserConversations1")
  conversationsAsUser2 Conversation[] @relation("UserConversations2")
  sentMessages         Message[]      @relation("SentMessages")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Job {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String
  requirements    String[]
  salary          String
  experienceLevel Int
  location        String
  jobType         String
  position        Int

  // Relations
  created_by  User   @relation("CreatedJobs", fields: [createdById], references: [id])
  createdById String @db.ObjectId
  
  applications Application[] // A job can have many applications
  savedBy      SavedJob[]    // A job can be saved by many users

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Application {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  status      ApplicationStatus @default(Pending)
  jobId       String   @db.ObjectId
  applicantId String   @db.ObjectId
  job         Job      @relation(fields: [jobId], references: [id])
  applicant   User     @relation(fields: [applicantId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SavedJob {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  jobId     String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  job       Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  
  @@unique([userId, jobId])
  @@index([userId])
  @@index([jobId])
}

enum ApplicationStatus {
  Pending
  Accepted
  Rejected
}

enum Role {
  Admin
  Employer
  Student
  Seeker
}

model Conversation {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  participants  String[] @db.ObjectId // Array of user IDs for easy querying
  
  lastMessage   String?
  lastMessageAt DateTime?
  
  // Relations - explicit user1 and user2 for unique constraint
  user1         User     @relation("UserConversations1", fields: [user1Id], references: [id])
  user1Id       String   @db.ObjectId
  user2         User     @relation("UserConversations2", fields: [user2Id], references: [id])
  user2Id       String   @db.ObjectId
  
  // Link to application (optional - for application-based chats)
  applicationId String?  @db.ObjectId
  jobId         String?  @db.ObjectId
  
  // Track who initiated the conversation (recruiter must initiate)
  // Optional for backward compatibility with existing conversations
  initiatedBy   String?  @db.ObjectId
  
  messages      Message[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@unique([user1Id, user2Id])
  @@index([participants])
  @@index([applicationId])
}

model Message {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  content        String
  isRead         Boolean      @default(false)
  
  // Relations
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  conversationId String       @db.ObjectId
  
  sender         User         @relation("SentMessages", fields: [senderId], references: [id])
  senderId       String       @db.ObjectId
  
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  
  @@index([conversationId])
  @@index([senderId])
}