// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  fullName           String
  email              String   @unique
  phoneNumber        String   @unique
  password           String
  role               Role     @default(Student)
  profileBio         String?
  skills             String[]
  resume             String?
  resumeOriginalname String?
  profilePhoto       String?  @default("")
  refreshToken       String?

  // Relations
  createdJobs  Job[]         @relation("CreatedJobs")
  applications Application[] // A user can apply to many jobs

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Job {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String
  requirements    String[]
  salary          String
  experienceLevel Int
  location        String
  jobType         String
  position        Int

  // Relations
  created_by  User   @relation("CreatedJobs", fields: [createdById], references: [id])
  createdById String @db.ObjectId
  
  applications Application[] // A job can have many applications

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Application {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  status      String   @default("Pending")
  jobId       String   @db.ObjectId
  applicantId String   @db.ObjectId
  job         Job      @relation(fields: [jobId], references: [id])
  applicant   User     @relation(fields: [applicantId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Role {
  Admin
  Employer
  Student
  Seeker
}